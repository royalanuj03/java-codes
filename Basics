# java-codes
// How to print in java

System.out.print("Hello");
System.out.println("Hello World");


// variables 
int x = 10;
int y = 20;
int sum = x+y;
System.out.println(sum);
int prd = x*y;
System.out.println(prd);


// if else 
int n = 12;
if(n%2==0)
{
System.out.println("Even");
}
else 
{
System.out.println("odd");
}


//loops
// for loop
  for(int i=1;i<=10;i++)  // used  over while due to it compactness.
  {
     System.out.println(i);
  }
   System.out.println("Done");
        
    // while loop    
        int i = 1; // initialisation
        while(i<=10)  // evaluation
        { 
          System.out.println(i);
          i++;  // increment
        }
         System.out.println("Done");
         
         
 // Input in java
      Scanner scn = new Scanner(System.in);  // scn is a variable of scanner type and scanner type variable takes input from user and this variable scn is connected
      (system.in)to keyboard, when a user enters a value and hit enter then this entered value willl move in the variable called n in next step.
       int n = scn.nextInt(); // value will go in n.
       for(int i=1;i<=n;i++)
       {
           System.out.println(i);
       }
         
         
